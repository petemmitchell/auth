<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="user header">
        <%= link_to "Sign Up", new_user_path %> or
         <%= link_to "Log In", new_session_path %>
      </div>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

  <%= yield %>

  </body>
</html>
